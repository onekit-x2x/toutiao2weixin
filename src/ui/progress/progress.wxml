<view  style="display:flex;align-items:center;">
   <progress
   class="onekit-progress {{onekitClass}}"
   style="flex-grow:2;--borderRadius:{{borderRadius}} {{onekitStyle}}"
   id="{{onekitId}}"
   percent="{{percent}}" 
   stroke-width="{{strokeWidth}}"
   color="{{color}}"
   activeColor="{{activeColor}}"
   backgroundColor="{{backgroundColor}}"
   active="{{active}}"
   active-mode="{{activeMode}}"
   bindactiveend="bindactiveend"
   font-size="{{fontSize}}"

   
bindtap="ui_tap"
bindtouchstart="ui_touchstart"
bindtouchmove="ui_touchmove"
bindtouchcancel="ui_touchcancel"
bindtouchend="ui_touchend"
bindlongpress="ui_longpress"
bindlongtap="ui_longtap"
bindtransitionend="ui_transitionend"
bindanimationstart="ui_animationstart"
bindanimationiteration="ui_animationiteration"
bindanimationend="ui_animationend"
bindtouchforcechange="ui_touchforcechange"
   />

<text wx:if="{{showInfo}}" style="font-size:{{fontSize}}rpx">{{percent}}%</text>
</view>