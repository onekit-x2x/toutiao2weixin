<import src="../../../common/head.wxml"></import>
<import src="../../../common/foot.wxml"></import>

<view  class="container">
  <template  is="head" data="{{title: 'Login'}}"></template>

  <view  class="page-body">
    <view  class="page-section">
      <block  wx:if="{{hasLogin == true}}">
        <text  class="page-body-title">已登录</text>
        <text  class="page-body-text">每个头条号中仅需登录 1 次，后续每次进入页面即可根据头条 id 自动拉取用户信息</text>
      </block>
      <block  wx:if="{{hasLogin == false}}">
        <text  class="page-body-text">每个头条号中仅需登录一次</text>
        <button  class="page-body-button" type="primary" bindtap="login">头条登录</button>
      </block>
    </view>
  </view>

  <template  is="foot"></template>
</view>
