<import src="../../../common/head.wxml"></import>
<import src="../../../common/foot.wxml"></import>

<view  class="container">
  <template  is="head" data="{{title: 'label'}}"></template>

  <view  class="page-body">
    <view  class="page-section page-section-gap">
      <view  class="page-section-title">表单组件在label内</view>
      <onekit-checkbox-group  class="group" bindchange="checkboxChange">
        <view  class="label-1" wx:for="{{checkboxItems}}">
          <onekit-label >
            <onekit-checkbox  value="{{item.name}}" checked="{{item.checked}}"></onekit-checkbox>
            <text  class="label-1-text">{{item.value}}</text>
          </onekit-label>
        </view>
      </onekit-checkbox-group>
    </view>

    <view  class="page-section page-section-gap">
      <view  class="page-section-title">label用for标识表单组件</view>
      <onekit-radio-group  class="group" bindchange="radioChange">
        <view  class="label-2" wx:for="{{radioItems}}">
          <onekit-radio  id="{{item.name}}" value="{{item.name}}" checked="{{item.checked}}"></onekit-radio>
          <onekit-label  class="label-2-text" for="{{item.name}}"><text >{{item.name}}</text></onekit-label>
        </view>
      </onekit-radio-group>
    </view>

    <view  class="page-section page-section-gap">
      <view  class="page-section-title">label内有多个时选中第一个</view>
      <onekit-label  class="label-3">
        <onekit-checkbox  class="checkbox-3">选项一</onekit-checkbox>
        <onekit-checkbox  class="checkbox-3">选项二</onekit-checkbox>
        <view  class="label-3-text">点击该label下的文字默认选中第一个checkbox</view>
      </onekit-label>
    </view>
  </view>

  <template  is="foot"></template>
</view>
