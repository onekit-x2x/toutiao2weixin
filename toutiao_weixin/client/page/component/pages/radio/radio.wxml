<import src="../../../common/head.wxml"></import>
<import src="../../../common/foot.wxml"></import>

<view  class="container">
  <template  is="head" data="{{title: 'radio'}}"></template>

  <view  class="page-body">
    <view  class="page-section page-section-gap">
      <view  class="page-section-title">默认样式</view>
      <onekit-label  class="radio">
        <onekit-radio  value="r1" checked="true"></onekit-radio>选中
      </onekit-label>
      <onekit-label  class="radio">
        <onekit-radio  value="r2"></onekit-radio>未选中
      </onekit-label>
    </view>


    <view  class="page-section">
      <view  class="page-section-title">推荐展示样式</view>
      <view  class="weui-cells weui-cells_after-title">
        <onekit-radio-group  bindchange="radioChange">
          <onekit-label  class="weui-cell weui-check__label" wx:for="{{items}}" wx:key="{{item.value}}">

            <view  class="weui-cell__hd">
              <onekit-radio  value="{{item.value}}" checked="true"></onekit-radio>
            </view>
            <view  class="weui-cell__bd">{{item.name}}</view>
          </onekit-label>
        </onekit-radio-group>
      </view>
    </view>
  </view>

  <template  is="foot"></template>
</view>
