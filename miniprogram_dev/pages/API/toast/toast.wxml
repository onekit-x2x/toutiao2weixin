
<onekit-view onekit-class="container">

  <onekit-view onekit-class="body">
    <onekit-view onekit-class="btn-area">
      <onekit-view onekit-class="body-view">
        <onekit-button type="default" bindTap="toast1Tap">点击弹出默认 Toast</onekit-button>
      </onekit-view>
      <onekit-view onekit-class="body-view">
        <onekit-button type="default" bindTap="toast2Tap">点击弹出带 duration Toast</onekit-button>
      </onekit-view>
      <onekit-view onekit-class="body-view">
        <onekit-button type="default" bindTap="toast3Tap">点击弹出带 icon Toast</onekit-button>
      </onekit-view>
      <onekit-view onekit-class="body-view">
        <onekit-button type="default" bindTap="hideToast">点击隐藏toast</onekit-button>
      </onekit-view>
    </onekit-view>
  </onekit-view>

	<onekit-view onekit-class="body">
    <onekit-view onekit-class="btn-area">
      <onekit-view onekit-class="body-view">
        <onekit-button type="default" bindTap="showLoadingTap">showLoading</onekit-button>
      </onekit-view>
      <onekit-view onekit-class="body-view">
        <onekit-button type="default" bindTap="hideLoadingTap">hideLoading</onekit-button>
      </onekit-view>
    </onekit-view>
  </onekit-view>

</onekit-view>