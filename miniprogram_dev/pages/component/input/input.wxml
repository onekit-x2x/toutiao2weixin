<onekit-view onekit-class="container">
  <onekit-view onekit-class="body">
    <onekit-view onekit-class="page-section">
      <onekit-view onekit-class="page-section-title page-section-title-space">可以自动聚焦的input</onekit-view>
      <onekit-view onekit-class="input-block">
          <onekit-input onekit-class="ttui-input" auto-focus placeholder="将会获取焦点"></onekit-input>
      </onekit-view>
    </onekit-view>
    <onekit-view onekit-class="page-section">
      <onekit-view onekit-class="page-section-title page-section-title-space">控制最大输入长度的input</onekit-view>
      <onekit-view onekit-class="input-block">
          <onekit-input onekit-class="ttui-input" maxlength="10" placeholder="最大输入长度为10"></onekit-input>
      </onekit-view>
    </onekit-view>
    <onekit-view onekit-class="page-section">
      <onekit-view onekit-class="page-section-title page-section-title-space">实时获取输入值：{{inputValue}}</onekit-view>
      <onekit-view onekit-class="input-block">
          <onekit-input onekit-class="ttui-input" maxlength="10" bindinput="bindKeyInput" placeholder="输入同步到view中"></onekit-input>
      </onekit-view>
    </onekit-view>
    <onekit-view onekit-class="page-section">
      <onekit-view onekit-class="page-section-title page-section-title-space">控制输入的input</onekit-view>
      <onekit-view onekit-class="input-block">
          <onekit-input onekit-class="ttui-input" bindinput="bindReplaceInput" placeholder="连续的两个1会变成2"></onekit-input>
      </onekit-view>
    </onekit-view>
    <onekit-view onekit-class="page-section">
      <onekit-view onekit-class="page-section-title page-section-title-space">控制键盘的input</onekit-view>
      <onekit-view onekit-class="input-block">
          <onekit-input onekit-class="ttui-input" bindinput="bindHideKeyboard" placeholder="输入123自动收起键盘"></onekit-input>
      </onekit-view>
    </onekit-view>
    <onekit-view onekit-class="page-section">
      <onekit-view onekit-class="page-section-title page-section-title-space">数字输入的input</onekit-view>
      <onekit-view onekit-class="input-block">
          <onekit-input onekit-class="ttui-input" type="number" placeholder="这是一个数字输入框"></onekit-input>
      </onekit-view>
    </onekit-view>
    <onekit-view onekit-class="page-section">
      <onekit-view onekit-class="page-section-title page-section-title-space">密码输入的input</onekit-view>
      <onekit-view onekit-class="input-block">
          <onekit-input onekit-class="ttui-input" password type="text" placeholder="这是一个密码输入框"></onekit-input>
      </onekit-view>
    </onekit-view>
    <onekit-view onekit-class="page-section">
      <onekit-view onekit-class="page-section-title page-section-title-space">带小数点的input</onekit-view>
      <onekit-view onekit-class="input-block">
          <onekit-input onekit-class="ttui-input" type="digit" placeholder="带小数点的数字键盘"></onekit-input>
      </onekit-view>
    </onekit-view>
    <onekit-view onekit-class="page-section">
      <onekit-view onekit-class="page-section-title page-section-title-space">身份证输入的input</onekit-view>
      <onekit-view onekit-class="input-block">
          <onekit-input onekit-class="ttui-input" type="idcard" placeholder="身份证输入键盘"></onekit-input>
      </onekit-view>
    </onekit-view>
    <onekit-view onekit-class="page-section">
      <onekit-view onekit-class="page-section-title page-section-title-space">控制占位符颜色的input</onekit-view>
      <onekit-view onekit-class="input-block">
          <onekit-input onekit-class="ttui-input" placeholder-style="color:#F76260" placeholder="占位符字体是红色的"></onekit-input>
      </onekit-view>
    </onekit-view>
  </onekit-view>
</onekit-view>





