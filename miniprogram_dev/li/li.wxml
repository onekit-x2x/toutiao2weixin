<onekit-view class="container">
  <onekit-view class="body body-space">
    <onekit-view class="page-section">
      <onekit-view class="page-section-title page-section-title-space">
        <text>flex-direction: row\n横向布局</text>
      </onekit-view>
      <onekit-view class="flex-wrp" style="flex-direction:row;">
        <onekit-view class="flex-item demo-text-1" hover-class="black" hover-start-time="50" hover-stay-time="2000"></onekit-view>
        <onekit-view class="flex-item demo-text-2" hover-class="none" hover-class="black"></onekit-view>
        <onekit-view class="flex-item demo-text-3" hover-class="gray"></onekit-view>
      </onekit-view>
    </onekit-view>
    <onekit-view class="page-section">
      <onekit-view class="page-section-title page-section-title-space">
        <text>flex-direction: column\n纵向布局</text>
      </onekit-view>
      <onekit-view class="flex-wrp" style="flex-direction:column;padding:20rpx;" hover-class="black">
        <onekit-view class="flex-item flex-item-V demo-text-1" hover-stop-propagation="{{true}}" hover-class="black"></onekit-view>
        <onekit-view class="flex-item flex-item-V demo-text-2" hover-stay-time="2000" hover-class="yellow"></onekit-view>
        <onekit-view class="flex-item flex-item-V demo-text-3" hover-stop-propagation="{{false}}"></onekit-view>
      </onekit-view>
    </onekit-view>
  </onekit-view>
</onekit-view>